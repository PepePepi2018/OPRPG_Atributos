<StartScreen>
    BoxLayout:
        padding: 10
        spacing: 5

        Button:
            text: 'Criar Ficha'
            on_press: root.manager.current = 'inputxp'
        Button:
            text: 'Atualizar Ficha'
            on_press: root.PegarDados()

<InputXPScreen>
    exp: exp
    BoxLayout:
        spacing: (root.height)*0.10
        padding: (root.height)*0.25
        orientation: 'vertical'            
        Label:
            text: 'Coloque a sua experiência abaixo'
            size_hint_y: 0.1
            size_hint_x: 0.5    
            pos_hint: {'x': 0.25}
        TextInput:
            id: exp
            size_hint_y: 0.1
            size_hint_x: 0.25
            font_size: (root.height)*0.07
            pos_hint: {'x': 0.375}
            multiline: False
            halign: 'center'
            input_filter: 'int'
        Button:
            text: 'Essa é a minha experiência'
            size_hint_y: 0.1
            size_hint_x: 0.4
            pos_hint: {'x': 0.3}
            on_press: root.processarXP(exp)

<AttXPScreen>
    BoxLayout:
        orientation: 'vertical'
        spacing: (root.height)*0.10
        padding: (root.height)*0.25

        Label:
            id: apresentacao
            size_hint_y: 0.1
            size_hint_x: 0.5    
            pos_hint: {'x': 0.25}

        GridLayout:
            cols: 2
            size_hint_y: 0.7
            spacing: (root.height)*0.10


            Label:
                text: 'Recebi isso de experiência:'
                size_hint_y: 0.2
                size_hint_x: 0.5    
                
                pos_hint: {'x': 0.25}
            Label:
                text: 'Haki foi isso:'
                size_hint_y: 0.2
                size_hint_x: 0.5    
                pos_hint: {'x': 0.25}

            TextInput:
                input_filter: 'int'
                id: inputexp
                size_hint_y: 0.8
                size_hint_x: 0.2
                font_size: (root.height)*0.07
                pos_hint: {'x': 0.125}
                multiline: False
                halign: 'center'
                input_filter: 'int'

            TextInput:
                input_filter: 'int'
                id: inputexpextra
                size_hint_y: 0.8
                size_hint_x: 0.2
                font_size: (root.height)*0.07
                pos_hint: {'x': 0.625}
                multiline: False
                halign: 'center'
                input_filter: 'int'

        Button:
            text: "Ok"
            size_hint_y: 0.2
            size_hint_x: 0.4
            pos_hint: {'x': 0.3}
            on_press: root.AttFicha()

