<AkumaScreen>
    BoxLayout:
        orientation: 'vertical'
        padding: (root.height)*0.05
        spacing: (root.height)*0.025

        Label:
            text: "Seu Multiplicador"
            size_hint_y: 0.05

        GridLayout:
            cols: 2
            size_hint_y: 0.05
            spacing: (root.height)*0.2
            padding: [(root.height)*0.15, 0]

            ToggleButton:
                group: 'multiplicador'
                state: 'down'
                text: "8x"
                id: mul8
                size_hint_x: (root.height)*0.05
                on_press: root.ChangeMul(8)

            
            ToggleButton:
                group: 'multiplicador'
                text: "9x"
                id: mul9
                size_hint_x: (root.height)*0.05
                on_press: root.ChangeMul(9)

        Label:
            text: "Crie e ordene as formas como quiser\nA forma que aparecerá na tabela principal será a primeira"
            size_hint_y: 0.05

        GridLayout:
            cols: 2
            size_hint_y: 0.75

            BoxLayout:
                orientation: 'vertical'

                Label:
                    id: listaakuma
                    size_hint_y: 0.7

                Label:
                    text: "Qual forma quer apagar/mover?"
                    size_hint_y: 0.1

                TextInput:
                    input_filter: 'int'
                    id: orglist
                    size_hint_y: 0.1

                GridLayout:
                    cols: 2
                    size_hint_y: 0.1

                    Button:
                        text: "Apagar forma"
                        on_press: root.DelList(orglist)
                    
                    Button:
                        text: "Colocar no topo"
                        on_press: root.SwapForm(orglist)
            
            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: "Parâmetros da akuma:"
                    size_hint_y: 0.1

                GridLayout:
                    cols: 2
                    size_hint_y: 0.8

                    Label:
                        text: "Dano"
                        size_hint_y: 1/7
                    
                    TextInput:
                        input_filter: 'int'
                        id: dano
                        size_hint_y: 1/7

                    Label:
                        text: "Acerto"
                        size_hint_y: 1/7
                    
                    TextInput:
                        input_filter: 'int'
                        id: acerto
                        size_hint_y: 1/7

                    Label:
                        text: "Pontaria"
                        size_hint_y: 1/7
                    
                    TextInput:
                        input_filter: 'int'
                        id: pontaria
                        size_hint_y: 1/7

                    Label:
                        text: "Esquiva"
                        size_hint_y: 1/7
                    
                    TextInput:
                        input_filter: 'int'
                        id: esquiva
                        size_hint_y: 1/7

                    Label:
                        text: "Bloqueio"
                        size_hint_y: 1/7
                    
                    TextInput:
                        input_filter: 'int'
                        id: bloqueio
                        size_hint_y: 1/7

                    Label:
                        text: "Resistência"
                        size_hint_y: 1/7
                    
                    TextInput:
                        input_filter: 'int'
                        id: resistencia
                        size_hint_y: 1/7
            
                    Label:
                        text: "Nome da Forma"
                        size_hint_y: 1/7

                    TextInput:
                        id: nome
                        size_hint_y: 1/7

                Button:
                    size_hint_y: 0.1
                    size_hint_x: 0.5
                    pos_hint: {'x': 0.25}
                    text: "Criar forma"
                    on_press: root.CreateForm(dano, acerto, pontaria, esquiva, bloqueio, resistencia, nome)
        
        Button:
            size_hint_y: 0.05
            size_hint_x: 0.25
            pos_hint: {'x': 0.375}
            text: "Acabei"
            on_press: root.ProcessarAkuma()

